            <Size>
                <AbsDimension x="200" y="200"/>
            </Size>
            <Anchors>
                <Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER" x="0" y="0"/>
            </Anchors>
            <FontString inherits="ChatFontNormal"/>
            <Scripts>
                <OnEscapePressed>
                    self:ClearFocus()
                </OnEscapePressed>
            </Scripts>
        </EditBox> -->
    
            <Button name="WordReplacementOverridesUISaveAndReloadButton" inherits="UIPanelButtonTemplate" text="Save and Reload">
                <Size>
                    <AbsDimension x="140" y="22"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM" relativePoint="BOTTOM" x="0" y="10"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        WordReplacementOverridesSaveAndReload()
                    </OnClick>
                </Scripts>
            </Button>
        
        </Frames>        
    </Frame>
</Ui>