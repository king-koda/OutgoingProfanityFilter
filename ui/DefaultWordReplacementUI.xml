<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Frame name="DefaultWordReplacementUI" frameStrata="DIALOG" hidden="true" enableMouse="true" clampedToScreen="true" toplevel="true" inherits="BackdropTemplate, BasicFrameTemplateWithInset">
        <Size>
            <AbsDimension x="400" y="300"/>
        </Size>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="DefaultWordReplacementTitle" inherits="GameFontHighlightLarge" text="Outgoing Profanity Filter">
                    <Anchors>
                        <Anchor point="TOP" relativePoint="TOP" x="0" y="-3"/>
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="OVERLAY">
                <FontString name="DefaultWordReplacementUISubtitle" inherits="GameFontNormal" text="Configure Default Word Replacement">
                    <Anchors>
                        <Anchor point="TOP" relativePoint="TOP" x="0" y="-35"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="DefaultWordReplacementInfoIconButton" inherits="UIPanelButtonTemplate" text='i'>
                <Size>
                    <AbsDimension x="20" y="16"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeTo="DefaultWordReplacementUI" relativePoint="TOPRIGHT" x="-15" y="-30"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        GameTooltip:SetOwner(self, "ANCHOR_NONE")
                        GameTooltip:SetPoint("TOP", DefaultWordReplacementInfoIconButton, "BOTTOM", 0, -10)
                        GameTooltip:SetText("A word or character should be provided in the input box below, that will be used when sending messages to replace any of the words included in the Words To Replace config.\n\nExample:\n* Default Replacement: $$\n* Words to Replace List: cow,chicken,muffin,donkey\n* Original Message: 'The silly COW chiCken had its DOnkey in a MUFFIN'\n* Sent Message: 'The silly $$ $$ had its $$ in a $$'",1,1,1,1,true)
                        GameTooltip:Show()
                    </OnClick>
                    <OnLeave>
                        GameTooltip:Hide()
                    </OnLeave>
                </Scripts>
            </Button>
            <EditBox name="DefaultWordReplacementTextArea" inherits="InputBoxTemplate" autoFocus="false">
                <Size>
                    <AbsDimension x="200" y="200"/>
                </Size>
                <Anchors>
                    <Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER" x="0" y="0"/>
                </Anchors>
                <FontString inherits="ChatFontNormal"/>
                <Scripts>
                    <OnEscapePressed>
                        self:ClearFocus()
                    </OnEscapePressed>
                </Scripts>
            </EditBox>
            <Button name="DefaultWordReplacementSaveAndReloadButton" inherits="UIPanelButtonTemplate" text="Save and Reload">
                <Size>
                    <AbsDimension x="140" y="22"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOM" relativePoint="BOTTOM" x="0" y="10"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        OPF.DWR.SaveAndReload()
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
    </Frame>
</Ui>