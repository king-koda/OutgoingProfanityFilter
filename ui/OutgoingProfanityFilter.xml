<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Script file="OutgoingProfanityFilter.lua"/>
    <Frame name="OPFConfigFrame" frameStrata="HIGH" hidden="true" enableMouse="true" clampedToScreen="true" toplevel="true" inherits="BackdropTemplate, BasicFrameTemplateWithInset">
        <Size>
            <AbsDimension x="400" y="300"/>
        </Size>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="OPFConfigFrameTitle" inherits="GameFontHighlightLarge" text="Outgoing Profanity Filter">
                    <Anchors>
                        <Anchor point="TOP" relativePoint="TOP" x="0" y="-3"/>
                    </Anchors>                
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="ShowWordsToReplaceUIButton" inherits="UIPanelButtonTemplate" text="Configure Words To Replace">
                <Size>
                    <AbsDimension x="300" y="35"/>
                </Size>
                <Anchors>
                    <Anchor point="CENTER" relativeTo="OPFConfigFrameTitle" relativePoint="CENTER" x="0" y="-50"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        OPF.ShowWordsToReplaceUI()
                    </OnClick>
                    <OnEnter>
                         local x, y = GetCursorPosition()
                        GameTooltip:SetOwner(self, "ANCHOR_NONE")
                        GameTooltip:SetPoint("TOP", ShowWordsToReplaceUIButton, "TOP", 0, 35)
                        GameTooltip:SetText("Configure the list of words that will be replaced.")
                        GameTooltip:Show()
                    </OnEnter>
                    <OnLeave>                        
                        GameTooltip:Hide()
                    </OnLeave>
                </Scripts>
            </Button>
            <Button name="ShowDefaultWordReplacementUIButton" inherits="UIPanelButtonTemplate" text="Configure Default Word Replacement">
                <Size>
                    <AbsDimension x="300" y="35"/>
                </Size>
                <Anchors>
                    <Anchor point="CENTER" relativeTo="OPFConfigFrameTitle" relativePoint="CENTER" x="0" y="-100"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        OPF.ShowDefaultWordReplacementUI()
                    </OnClick>
                    <OnEnter>
                         local x, y = GetCursorPosition()
                        GameTooltip:SetOwner(self, "ANCHOR_NONE")
                        GameTooltip:SetPoint("TOP", ShowDefaultWordReplacementUIButton, "TOP", 0, 35)
                        GameTooltip:SetText("Configure the default replacement for all words in the list.")
                        GameTooltip:Show()
                    </OnEnter>
                    <OnLeave>                        
                        GameTooltip:Hide()
                    </OnLeave>
                </Scripts>
            </Button>
            <Button name="ShowWordReplacementOverridesUIButton" inherits="UIPanelButtonTemplate" text="Configure Word Replacement Overrides">
                <Size>
                    <AbsDimension x="300" y="35"/>
                </Size>
                <Anchors>
                    <Anchor point="CENTER" relativeTo="OPFConfigFrameTitle" relativePoint="CENTER" x="0" y="-150"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        OPF.ShowWordReplacementOverridesUI()
                    </OnClick>
                    <OnEnter>
                         local x, y = GetCursorPosition()
                        GameTooltip:SetOwner(self, "ANCHOR_NONE")
                        GameTooltip:SetPoint("TOP", ShowWordReplacementOverridesUIButton, "TOP", 0, 35)
                        GameTooltip:SetText("Configure override replacements for specific words instead of the default.")
                        GameTooltip:Show()
                    </OnEnter>
                    <OnLeave>                        
                        GameTooltip:Hide()
                    </OnLeave>
                </Scripts>
            </Button>
            <Button name="ResetAllToDefaults" inherits="UIPanelButtonTemplate" text="Reset all to Defaults">
                <Size>
                    <AbsDimension x="200" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="CENTER" relativePoint="CENTER" x="0" y="-100"/>
                </Anchors>
                <Scripts>
                   <OnClick>
            StaticPopup_Show("CONFIRM_OPF_RESET")
                </OnClick>
                </Scripts>
            </Button>
        </Frames>
    </Frame>
</Ui>