<Ui xmlns="http://www.blizzard.com/wow/ui/">
    <Script file="OutgoingProfanityFilter.lua"/>
    <Frame name="OPFConfigFrame"  frameStrata="HIGH"  hidden="true" enableMouse="true" clampedToScreen="true" topLevel="true" inherits="BackdropTemplate, BasicFrameTemplateWithInset">
        <Size>
            <AbsDimension x="400" y="300"/>
        </Size>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="OPFConfigFrameTitle" inherits="GameFontHighlightLarge" text="Outgoing Profanity Filter">
                    <Anchors>
                        <Anchor point="TOP" relativePoint="TOP" x="0" y="-3"/>
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="OVERLAY">
                <FontString name="OPFConfigUISubtitleConfigure" inherits="GameFontNormal" text="Configure">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="OPFConfigFrame" relativePoint="TOPLEFT" x="80" y="-40"/>
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="OVERLAY">
                <FontString name="OPFConfigUISubtitleToggle" inherits="GameFontNormal" text="Toggle">
                    <Anchors>
                        <Anchor point="TOPRIGHT" relativeTo="OPFConfigFrame" relativePoint="TOPRIGHT" x="-80" y="-40"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Frame name="OPFConfigTopLeftCorner">
                <Size>
                    <AbsDimension x="200" y="300"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="OPFConfigFrame" relativePoint="TOPLEFT" x="0" y="0"/>
                </Anchors>
                <Frames>
                    <Button name="ShowWordsToReplaceUIButton" inherits="GameMenuButtonTemplate" text="Words">
                        <Size>
                            <AbsDimension x="160" y="35"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="OPFConfigTopLeftCorner" relativePoint="TOPLEFT" x="30" y="-60"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                        OPF.ShowWordsToReplaceUI()
                    </OnClick>
                            <OnEnter>
                         local x, y = GetCursorPosition()
                        GameTooltip:SetOwner(self, "ANCHOR_NONE")
                        GameTooltip:SetPoint("TOP", ShowWordsToReplaceUIButton, "TOP", 0, 35)
                        GameTooltip:SetText("Configure the list of words that will be replaced.")
                        GameTooltip:Show()
                    </OnEnter>
                            <OnLeave>                        
                        GameTooltip:Hide()
                    </OnLeave>
                        </Scripts>
                    </Button>
                    <Button name="ShowDefaultWordReplacementUIButton" inherits="GameMenuButtonTemplate" text="Default Replacement">
                        <Size>
                            <AbsDimension x="160" y="35"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="OPFConfigTopLeftCorner" relativePoint="TOPLEFT" x="30" y="-100"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                        OPF.ShowDefaultWordReplacementUI()
                    </OnClick>
                            <OnEnter>
                         local x, y = GetCursorPosition()
                        GameTooltip:SetOwner(self, "ANCHOR_NONE")
                        GameTooltip:SetPoint("TOP", ShowDefaultWordReplacementUIButton, "TOP", 0, 35)
                        GameTooltip:SetText("Configure the default replacement for all words in the list.")
                        GameTooltip:Show()
                    </OnEnter>
                            <OnLeave>                        
                        GameTooltip:Hide()
                    </OnLeave>
                        </Scripts>
                    </Button>
                    <Button name="ShowWordReplacementOverridesUIButton" inherits="GameMenuButtonTemplate" text="Replacement Overrides">
                        <Size>
                            <AbsDimension x="160" y="35"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="OPFConfigTopLeftCorner" relativePoint="TOPLEFT" x="30" y="-140"/>
                        </Anchors>
                        <Scripts>
                            <OnClick>
                        OPF.ShowWordReplacementOverridesUI()
                    </OnClick>
                            <OnEnter>
                         local x, y = GetCursorPosition()
                        GameTooltip:SetOwner(self, "ANCHOR_NONE")
                        GameTooltip:SetPoint("TOP", ShowWordReplacementOverridesUIButton, "TOP", 0, 35)
                        GameTooltip:SetText("Configure override replacements for specific words instead of the default.")
                        GameTooltip:Show()
                    </OnEnter>
                            <OnLeave>                        
                        GameTooltip:Hide()
                    </OnLeave>
                        </Scripts>
                    </Button>
                </Frames>
            </Frame>
            <Frame name="OPFConfigTopRightCorner">
                <Size>
                    <AbsDimension x="200" y="300"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeTo="OPFConfigFrame" relativePoint="TOPRIGHT" x="0" y="0"/>
                </Anchors>
                <Frames>
                    <CheckButton name="OPFTogglePartialMatchCheckBox">
                        <Size>
                            <AbsDimension x="40" y="40"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPRIGHT" relativeTo="OPFConfigTopRightCorner" relativePoint="TOPRIGHT" x="-30" y="-60"/>
                        </Anchors>
                        <NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
                        <PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
                        <HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
                        <CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
                        <Scripts>
                            <OnClick>
                        OPF.ToggleMatchingType()
                    </OnClick>
                        </Scripts>
                    </CheckButton>
                     <CheckButton name="OPFToggleExactMatchCheckBox">
                        <Size>
                            <AbsDimension x="40" y="40"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPRIGHT" relativeTo="OPFConfigTopRightCorner" relativePoint="TOPRIGHT" x="-30" y="-100"/>
                        </Anchors>
                        <NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
                        <PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
                        <HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
                        <CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
                        <Scripts>
                            <OnClick>
                        OPF.ToggleMatchingType()
                    </OnClick>
                        </Scripts>
                    </CheckButton>
                </Frames>
            </Frame>
            <!-- <Button name="ResetAllToDefaults" inherits="UIPanelButtonTemplate" text="Reset all to Defaults">
                <Size>
                    <AbsDimension x="200" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="CENTER" relativePoint="CENTER" x="0" y="-100"/>
                </Anchors>
                <Scripts>
                    <OnClick>
            StaticPopup_Show("CONFIRM_OPF_RESET")
                </OnClick>
                </Scripts>
            </Button>  -->
            </Frames>
            <Layers>
            <Layer level="OVERLAY">
                <FontString name="OPFTogglePartialMatchCheckBoxLabel" inherits="GameFontHighlight" text="Partial Matching">
                     <Size>
                            <AbsDimension x="160" y="35"/>
                        </Size>
                      <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="OPFConfigTopRightCorner" relativePoint="TOPLEFT" x="-10" y="-60"/>
                </Anchors>
                </FontString>
            </Layer>
            <Layer level="OVERLAY">
                <FontString name="OPFToggleExactMatchCheckBoxLabel" inherits="GameFontHighlight" text="Exact Matching">
                     <Size>
                            <AbsDimension x="160" y="35"/>
                        </Size>
                      <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="OPFConfigTopRightCorner" relativePoint="TOPLEFT" x="-10" y="-100"/>
                </Anchors>
                </FontString>
            </Layer>
        </Layers>
        </Frame>
    </Ui>